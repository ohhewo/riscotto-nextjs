{ "hosting": {

  // Add the "rewrites" attribute within "hosting"
  "rewrites": [ {
    "source": "/riscotto-nextjs",
    "run": {
      "serviceId": "riscotto-nextjs",  // "service name" (from when you deployed the container image)
      "region": "europe-west2",    // optional (if omitted, default is us-central1)
      "pinTag": true              // optional (see note below)
    }
  } ]
}
}